; https://editorconfig.org/

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab
indent_size = 4

[*.py]
charset = utf-8
indent_style = space
indent_size = 4

[{*.js*,*.ts*}]
charset = utf-8
indent_style = space
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false
eclint_indent_style = unset

[Dockerfile]
indent_size = 4

[java]
indent_size = 4
